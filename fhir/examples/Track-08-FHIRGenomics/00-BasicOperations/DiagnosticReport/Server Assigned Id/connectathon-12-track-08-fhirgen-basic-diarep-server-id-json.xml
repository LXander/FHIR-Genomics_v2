<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir">
	<id value="connectathon-12-track-08-fhirgen-basic-diarep-server-id-json"/>

	<url value="http://wildfhir.aegis.net/fhir/TestScript/connectathon-12-track-08-fhirgen-basic-diarep-server-id-json"/>
	<name value="FHIR Connectathon 12 - Track 08 - FHIR Genomics - DiagnosticReport Basic Operation Tests - JSON - Server Id"/>
	<status value="draft"/>
	<publisher value="AEGIS.net, Inc."/>
	<contact>
		<name value="Gil Alterovitz"/>
		<telecom>
			<system value="email"/>
			<value value="gilusa@gmail.com"/>
			<use value="work"/>
		</telecom>
	</contact>
	<contact>
		<name value="Touchstone Support"/>
		<telecom>
			<system value="email"/>
			<value value="Touchstone_Support@aegis.net"/>
			<use value="work"/>
		</telecom>
	</contact>
	<date value="2016-04-27"/>
	<description value="DiagnosticReport Basic Operation Tests - JSON - Server Assigned Resource Id - Create, Delete, History, Read, Search, Update, Vread."/>
	<useContext>
		<coding>
			<system value="urn:iso:std:iso:3166"/>
			<code value="US"/>
			<display value="United States of America (the)"/>
		</coding>
	</useContext>
	<requirements value="DiagnosticReport Create, Delete, History, Read, Search, Update, Vread Operations"/>
	<copyright value="Â© AEGIS.net, Inc. 2015+"/>

	<metadata>
		<capability>
			<required value="true"/>
			<description value="Create, Delete, Read, Update Operations"/>
			<link value="http://hl7.org/fhir/http.html#create"/>
			<link value="http://hl7.org/fhir/http.html#delete"/>
			<link value="http://hl7.org/fhir/http.html#read"/>
			<link value="http://hl7.org/fhir/http.html#update"/>
			<conformance>
				<reference value="../_reference/conformance/DiagnosticReportCreateDeleteReadUpdate.xml" />
			</conformance>
		</capability>
		<capability>
			<required value="true"/>
			<description value="History Instance, Vread Operations"/>
			<link value="http://hl7.org/fhir/http.html#history"/>
			<link value="http://hl7.org/fhir/http.html#vread"/>
			<conformance>
				<reference value="../_reference/conformance/DiagnosticReportHistoryInstanceVread.xml" />
			</conformance>
		</capability>
		<capability>
			<required value="true"/>
			<description value="Search Type Operation"/>
			<link value="http://hl7.org/fhir/http.html#search"/>
			<conformance>
				<reference value="../_reference/conformance/DiagnosticReportSearchType.xml" />
			</conformance>
		</capability>
	</metadata>	

	<fixture id="resource-create">
		<resource>
			<reference value="../_reference/resources/DiagnosticReport-create.json"/>
		</resource>
	</fixture>
	<fixture id="resource-create-min">
		<resource>
			<reference value="../_reference/resources/DiagnosticReport-create-min.json"/>
		</resource>
	</fixture>

	<fixture id="resource-update">
		<resource>
			<reference value="../_reference/resources/DiagnosticReport-update.json"/>
		</resource>
	</fixture>
	<fixture id="resource-update-min">
		<resource>
			<reference value="../_reference/resources/DiagnosticReport-update-min.json"/>
		</resource>
	</fixture>

	<profile id="bundle-profile">
		<reference value="http://hl7.org/fhir/StructureDefinition/Bundle"/>
	</profile>
	<profile id="resource-profile">
		<reference value="http://hl7.org/fhir/StructureDefinition/DiagnosticReport"/>
	</profile>

	<variable>
		<name value="createResourceId"/>
		<path value="DiagnosticReport/id" />
		<sourceId value="create-search-response"/>
	</variable>
	<variable>
		<name value="createVersionId"/>
		<path value="DiagnosticReport/meta/versionId" />
		<sourceId value="create-search-response" />
	</variable>
	<variable>
		<name value="searchParamIdentifier"/>
		<path value="DiagnosticReport/identifier/value" />
		<sourceId value="resource-create" />
	</variable>

	<setup>
		<!--   DiagnosticReport Delete   -->
		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes"/>
					<code value="delete"/>
				</type>
				<resource value="DiagnosticReport"/>
				<description value="Use a conditional delete operation to insure the DiagnosticReport does not exist on the server."/>
				<accept value="json"/>
				<contentType value="json"/>
				<params value="?identifier=${searchParamIdentifier}"/>
			</operation>
		</action>
	</setup>

	<test id="Step1-CreateNewDiagnosticReport">
		<name value="Step1-CreateNewDiagnosticReport"/>
		<description value="Create a new DiagnosticReport in JSON format where the server assigns the resource id."/>

		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes"/>
					<code value="create"/>
				</type>
				<accept value="json"/>
				<contentType value="json"/>
				<sourceId value="resource-create"/>
			</operation>
		</action>
		<action>
			<assert>
				<operator value="in"/>
				<responseCode value="200,201"/>
			</assert>
		</action>
		<action>
			<assert>
				<contentType value="json"/>
			</assert>
		</action>

		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes"/>
					<code value="search"/>
				</type>
				<resource value="DiagnosticReport"/>
				<description value="Search for the created DiagnosticReport by the unique identifier."/>
				<accept value="json"/>
				<contentType value="json"/>
				<params value="?identifier=${searchParamIdentifier}"/>
				<responseId value="create-search-response" />
			</operation>
		</action>
		<action>
			<assert>
				<response value="okay"/>
			</assert>
		</action>
		<action>
			<assert>
				<contentType value="json"/>
			</assert>
		</action>
		<action>
			<assert>
				<resource value="Bundle"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that returned bundle first entry contains the created version of the DiagnosticReport."/>
				<minimumId value="resource-create-min"/>
			</assert>
		</action>
	</test>

	<test id="Step2-ReadDiagnosticReport">
		<name value="Step2-ReadDiagnosticReport"/>
		<description value="Read the DiagnosticReport in JSON format created in step 1."/>

		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes"/>
					<code value="read"/>
				</type>
				<resource value="DiagnosticReport"/>
				<description value="Read using params element"/>
				<accept value="json"/>
				<contentType value="json"/>
				<params value="/${createResourceId}"/>
			</operation>
		</action>
		<action>
			<assert>
				<response value="okay"/>
			</assert>
		</action>
		<action>
			<assert>
				<validateProfileId value="resource-profile"/>
			</assert>
		</action>
		<action>
			<assert>
				<minimumId value="resource-create-min"/>
			</assert>
		</action>
	</test>

	<test id="Step3-UpdateDiagnosticReport">
		<name value="Step3-UpdateDiagnosticReport"/>
		<description value="Update the DiagnosticReport in JSON format created in step 1 then Read it again for verification."/>

		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes"/>
					<code value="update"/>
				</type>
				<resource value="DiagnosticReport"/>
				<accept value="json"/>
				<contentType value="json"/>
				<params value="/${createResourceId}"/>
				<responseId value="update-response" />
				<sourceId value="resource-update"/>
			</operation>
		</action>
		<action>
			<assert>
				<operator value="in"/>
				<responseCode value="200,201"/>
			</assert>
		</action>
		<action>
			<assert>
				<headerField value="Location"/>
				<operator value="notEmpty"/>
				<warningOnly value="true"/>
			</assert>
		</action>

		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes"/>
					<code value="read"/>
				</type>
				<resource value="DiagnosticReport"/>
				<accept value="json"/>
				<contentType value="json"/>
				<params value="/${createResourceId}"/>
			</operation>
		</action>
		<action>
			<assert>
				<validateProfileId value="resource-profile"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that read returns updated version and that update did not delete previously created fields."/>
				<minimumId value="resource-update-min"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the resource version is present. Warning only as the server may not support versioning."/>
				<operator value="notEmpty"/>
				<path value="DiagnosticReport/meta/versionId"/>
				<warningOnly value="true"/>
			</assert>
		</action>
	</test>

	<test id="Step4-DiagnosticReportHistoryInstance">
		<name value="Step4-DiagnosticReportHistoryInstance"/>
		<description value="Retrieve the updated DiagnosticReport instance's history in JSON format."/>

		<action>
			<operation>
				<resource value="DiagnosticReport"/>
				<description value="Retrieve the history for a single, known DiagnosticReport using the known identifier."/>
				<accept value="json"/>
				<contentType value="json"/>
				<params value="/${createResourceId}/_history"/>
			</operation>
		</action>
		<action>
			<assert>
				<response value="okay"/>
			</assert>
		</action>
		<action>
			<assert>
				<contentType value="json"/>
			</assert>
		</action>
		<action>
			<assert>
				<resource value="Bundle"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that there is more than one record returned."/>
				<operator value="greaterThan" />
				<path value="/Bundle/total"/>
				<value value="1"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that returned bundle first entry contains the most recent updated version of the DiagnosticReport."/>
				<minimumId value="resource-update-min"/>
			</assert>
		</action>
	</test>

	<test id="Step5-DiagnosticReportVersionRead">
		<name value="Step5-DiagnosticReportVersionRead"/>
		<description value="Retrieve a specific version of a DiagnosticReport instance in JSON format."/>

		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes"/>
					<code value="vread"/>
				</type>
				<resource value="DiagnosticReport"/>
				<description value="Retrieve initially created version of the DiagnosticReport instance."/>
				<accept value="json"/>
				<contentType value="json"/>
				<params value="/${createResourceId}/_history/${createVersionId}"/>
			</operation>
		</action>
		<action>
			<assert>
				<response value="okay"/>
			</assert>
		</action>
		<action>
			<assert>
				<contentType value="json"/>
			</assert>
		</action>
		<action>
			<assert>
				<resource value="DiagnosticReport"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that returned resource contains the created version of the DiagnosticReport."/>
				<minimumId value="resource-create-min"/>
			</assert>
		</action>
	</test>

	<test id="Step6-DiagnosticReportSearchType">
		<name value="Step6-DiagnosticReportSearchType"/>
		<description value="Search for DiagnosticReport resources in JSON format with a identifier = ${searchParamIdentifier}."/>

		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes"/>
					<code value="search"/>
				</type>
				<resource value="DiagnosticReport"/>
				<description value="Search for the DiagnosticReport by identifier."/>
				<accept value="json"/>
				<contentType value="json"/>
				<params value="?identifier=${searchParamIdentifier}"/>
			</operation>
		</action>
		<action>
			<assert>
				<response value="okay"/>
			</assert>
		</action>
		<action>
			<assert>
				<contentType value="json"/>
			</assert>
		</action>
		<action>
			<assert>
				<resource value="Bundle"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that there is at least one record returned. There could be other DiagnosticReport records returned."/>
				<operator value="greaterThan"/>
				<path value="/Bundle/total"/>
				<value value="0"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that returned bundle first entry contains the most recent updated version of the DiagnosticReport."/>
				<minimumId value="resource-update-min"/>
			</assert>
		</action>
	</test>

	<test id="Step7-DiagnosticReportDelete">
		<name value="Step7-DiagnosticReportDelete"/>
		<description value="Delete a DiagnosticReport instance in JSON format."/>

		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes"/>
					<code value="delete"/>
				</type>
				<resource value="DiagnosticReport"/>
				<description value="Delete the DiagnosticReport instance."/>
				<accept value="json"/>
				<contentType value="json"/>
				<targetId value="update-response"/>
			</operation>
		</action>
		<action>
			<assert>
				<operator value="in"/>
				<responseCode value="200,204"/>
			</assert>
		</action>
	</test>
</TestScript>